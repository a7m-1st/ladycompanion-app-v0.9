<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ladypink"
    tools:context="com.example.AmjadPart.fragment_contactexpert">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:layout_marginStart="16dp"
                android:text="Contact Health Expert"
                android:textColor="#000000"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/inquiry"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:hint="Enter your inquiry here"
                android:padding="12dp"
                android:color="@color/borderColor"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:maxLines="10"/>

            <Button
                android:id="@+id/sendMessage"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundstyle"
                android:text="SEND Message"
                android:layout_marginTop="44dp"
                android:padding="12dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/callExpert"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundstyle"
                android:text="Call Expert"
                android:layout_marginTop="30dp"
                android:padding="12dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"/>


        </LinearLayout>

</ScrollView>